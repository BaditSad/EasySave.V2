        <Rectangle RadiusX="10" RadiusY="10" Opacity="0.1" HorizontalAlignment="Left" Height="69" Margin="377,96,0,0" VerticalAlignment="Top" Width="251" Fill="White"/>
        <Rectangle RadiusX="10" RadiusY="10" Opacity="0.1" HorizontalAlignment="Left" Height="69" Margin="377,180,0,0" VerticalAlignment="Top" Width="251" Fill="White"/>
        <Label Content="Select a folder :" HorizontalAlignment="Left" Margin="61,96,0,0" VerticalAlignment="Top" Width="92" Foreground="White"/>
